<div class="comment-new-wrapper">
  <div class="container">
    <% if @comment_topics.present? %>
      <% @comment_topics.each do |topic| %>
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            <h1 class="text-center">Add Comment</h1>
            
              <%= form_for @comment do |f| %>
                <div class="form-group">
                  <%= f.label :content %>
                  <%= f.text_area :content, class: 'form-control' %>
                  <%= f.hidden_field :topic_id, :value => params[:topic_id] %>
            
                  <%= image_tag 'icons/commnt.png', class: 'topic-index-icon' %>
                <% if logged_in? %>
                  <%= f.submit 'コメント機能', class: 'btn-black btn-block' %>
                <% end %>
              <% end %>
            </div>    
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>